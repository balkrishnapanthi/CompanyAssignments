@model Employee
@{
    ViewData["Title"] = "ViewEmployeeDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ViewEmployeeDetails</h1>
<div class="card text-white bg-primary mb-3" >
    <div class="card-header">Employee Detail</div>
  
    <div class="card-body row" >
        <div class="col-lg-3 ">
            <img src="~/NoImage.png" class="rounded float-left" alt="...">
        </div>
        <div class="col-lg-9 ">
            <div class="col-lg-8 " style=" float:right;">
               <div>
                   <label asp-for="EmpName">Empoloyee Name</label>
                  <h5 class="card-title " >@Model.EmpName</h5>
                </div>
                <div>
                    <label asp-for="EmpCode">Empoloyee Code</label>
                    <h5 class="card-title ">@Model.EmpCode</h5>
                </div>
                <div>
                    <label asp-for="DeptCode">Empoloyee Department Code</label>
                    <h5 class="card-title ">@Model.DeptCode</h5>
                </div>
                <div>
                    <label asp-for="DateOfBirth">Empoloyee Date of Birth</label>
                    <h5 class="card-title ">@DateTime.Parse(@Model.DateOfBirth.ToString()).ToString("dd-MMM-yyyy")</h5>
                </div>
                <div>
                    <label asp-for="Email">Empoloyee Email</label>
                    <h5 class="card-title ">@Model.Email</h5>
                </div>
                <div>
                   <a asp-route="Home"  class="btn btn-success col-12">Back to Home</a>
                </div>

            </div>
        </div>
    </div>
</div>

